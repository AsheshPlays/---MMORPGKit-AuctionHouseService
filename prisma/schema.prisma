// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model auction {
  id                          Int         @default(autoincrement()) @id
  buyoutPrice                 Int         @default(0)
  bidPrice                    Int         @default(0)
  sellerId                    String      @db.VarChar(50) @default("")
  sellerName                  String      @db.VarChar(32) @default("")
  isEnd                       Boolean     @default(false)
  isBuyout                    Boolean     @default(false)
  winnerId                    String      @db.VarChar(50) @default("")
  winnerName                  String      @db.VarChar(32) @default("")
  itemDataId                  Int         @default(0)
  itemLevel                   Int         @default(1)
  itemAmount                  Int         @default(0)
  itemDurability              Float       @default(0)
  itemExp                     Int         @default(0)
  itemLockRemainsDuration     Float       @default(0)
  itemExpireTime              BigInt      @default(0)
  itemRandomSeed              Int         @default(0)
  itemSockets                 String      @db.VarChar(32) @default("")
  createdAt                   DateTime    @default(now())
  endedAt                     DateTime?
}